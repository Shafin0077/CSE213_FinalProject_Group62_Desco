<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.hrmanager.DashboardController"
            prefWidth="800.0" prefHeight="600.0" style="-fx-background-color: #f5f5f5;">

    <!-- Dashboard Title -->
    <Label layoutX="300.0" layoutY="30.0" text="HR Manager Dashboard"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Buttons for Navigation -->

    <Button layoutX="100.0" layoutY="100.0" text="Draft Job Postings"
            onAction="#handleDraftJobPostings" prefWidth="200.0" />

    <Button layoutX="100.0" layoutY="150.0" text="Publish Job Postings"
            onAction="#handlePublishJobPostings" prefWidth="200.0" />

    <Button layoutX="100.0" layoutY="200.0" text="Applications"
            onAction="#handleViewApplications" prefWidth="200.0" />

    <Button layoutX="100.0" layoutY="250.0" text="Shortlist Candidates"
            onAction="#handleShortlistCandidates" prefWidth="200.0" />

    <Button layoutX="100.0" layoutY="300.0" text="Schedule Interviews"
            onAction="#handleScheduleInterviews" prefWidth="200.0" />

    <Button layoutX="100.0" layoutY="350.0" text="Send Offer Letters"
            onAction="#handleSendOfferLetters" prefWidth="200.0" />

    <!-- Logout Button -->
    <Button layoutX="650.0" layoutY="30.0" text="Logout"
            onAction="#handleLogout" prefWidth="100.0" />

</AnchorPane>
